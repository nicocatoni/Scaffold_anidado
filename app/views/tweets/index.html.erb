<h1 class="text-center">Tweets</h1>
<div class="text-center">
  <%= link_to(image_tag('template/img3.jpg', class: 'img-fluid'), 'http://www.google.com')%>
</div>
<div class="text-center">
  <%= image_tag 'img2',class: 'img-fluid' %>
  <%= image_tag '/img1.jpg',class: 'img-fluid' %>
</div>
<br>

<br>
<% @tweets.each_with_index do |tweet, i| %>
  <div class="card">
    <div class="card-header">
      <%="Tweet##{i}"%>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= tweet.title %></h5>
      <p class="card-text"><%= tweet.content %></p>
      <%= link_to 'Mostrar', tweet, class:"btn btn-success" %>
      <%= link_to 'Editar', edit_tweet_path(tweet), class:"btn btn-info" %>
      <%= link_to 'Borrar', tweet, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
  <br>
<% end %>
<br>

